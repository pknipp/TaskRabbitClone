extends layout


block append head
    div(id="dataDiv", data-job=jobTypeId)
    script(src="/public/js/taskers.js" type="module" defer)
    link(rel="stylesheet" href="/public/css/taskers.css")

block content
    h1(id="pageTitle")
    #taskersContainer
        div(class="sort")
            select
                option(name="default")= "Recommended"
                option(name="pLow")= "Price (Lowest to Highest)"
                option(name="pHigh")= "Price (Highest to Lowest)"
                option(name="skill")= "Most Skilled"
