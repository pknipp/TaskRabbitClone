extends layout

include include/auth-input.pug

block append head
  script(src="/public/js/home.js" type="module" defer)
  link(rel="stylesheet" href="/public/css/auth.css")
  link(rel="stylesheet" href="/public/css/home.css")
  mixin img-bg(src, alt)
    img.img-bg(
    src=src,
    style=`background-image: path('${src}')`,
    alt=alt
    )&attributes(attributes)

block content
  .page
    .page-header
      .page-header-logo
        img(src= "/public/logo.svg" alt='taskdragon' style='width:150px; height:40px;')
      .page-header-lisulo
        a(href="/users/login" id="loginbox")
          span(id="login") Log in
        a(href="/users/logout" id="logoutbox")
          span Log out
        a(href="/users/signup" id="signup")
          button
            span Create an account
    .page-banner
      .banner-text
        span See the latest on our response to the Bubonic Plague
      .sub-text
        span Learn more

    .main-content
      .main-content-box
        h2 Help when thou require, at thine fingertips
        span Get help from thousands of trusted Taskers for everything from weaving to contactless dragon slaying.
        .jobtypeform
          form(id="jobtype-form")
            #errors-container
            .jobtypeform-dropdown
              +authInput("", "jobtype")
                select(name="jobTypeId" required)
                  each jobType in jobTypes
                    option(value=jobType.id)= jobType.name
            .jobtypeform-footer
              button(type="submit")
                span Get help today
    #jobTypesContainer

