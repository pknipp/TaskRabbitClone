extends layout

include include/auth-input.pug

block append head
    //- script(src="/public/js/taskers.js" type="module" defer)
    link(rel="stylesheet" href="/public/css/register.css")
    script(src="/public/js/login.js" type="module" defer)

block content

    image(src="/public/background.svg", style="background-image: path('/public/background.svg')" class="background")
    div(id="mainDiv")
      div(id="logo")
        img(src= "/public/logo.svg" alt='taskdragon' style='width:300px; height:40px;')
      form(id="login-form")
        input(type="hidden" name="_csrf" value=csrf)
        div(id="emailDiv")
          input(type="email" name="email" class="formInput" required)
        div(id="passwordDiv")
          input(type="password" name="password" class="formInput" required)
        div(id="logInDiv")
          button(type="submit" class="signUpButton" class="formInput") Log In
