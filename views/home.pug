block content
  .page
    div(class="page-header" id="header")
      .page-header-logo
        img(src= "/public/logo.svg" alt='taskdragon' style='width:150px; height:50px;')
      div(class="page-header-lisulo" id="account")
        a(href="/users/logout" id="logoutbox")
          span Log out
        a(href="/users/register" id="register")
          button
            span(id="accountactions") Log in
    .page-banner
      .banner-img
        img(src= "/public/plague.svg" alt='taskdragon' style='width:50px; height:75px;')
      .banner-text-and-sub-text
        .banner-text
          span Seeth the latest on our response to the Bubonic Plague
        .sub-text
          span We require all task'rs to weareth beshrew masks

    .main-content
      .main-content-box
        h2 Help at which hour thee require, at thy fing'rtips
        span Receiveth help from thousands of trusted task'rs f'r ev'rything from weaving to contactless dragon slaying
        .jobtypeform
          form(id="jobtype-form")
            #errors-container
            .jobtypeform-innercontainer
              .jobtypeform-dropdown
                +authInput("", "jobtype")
                  select(name="jobTypeId" required)
                    each jobType in jobTypes
                      option(value=jobType.id)= jobType.name
              .jobtypeform-footer
                button(type="submit")
                  span Receiveth help today
