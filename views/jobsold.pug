extends layout

block append head
  div(id="dataDiv", data-job=userId)
  script(src="/public/js/jobs.js" type="module" defer)

block content
  h1(id="pageTitle")
  table
    thead#thead
      tr
        th#1 Date
        th#2 Tasker
        th#3 Price (pence per day)
        th Details
    tbody#jobsTBody
  ul
    li
      a(href='/users/' + userId) See account details
    li
      a(href='/home') Go home
